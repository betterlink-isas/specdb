{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "baseUrl": "./",
    "types": ["node", "jest"],
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./node_modules", "./build", "./docs", "./bin", "./tests", "./dist"]
}